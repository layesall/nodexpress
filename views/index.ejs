<%- include('./component/header') %>
<div style="width: 50%; margin: auto">
  <section>
    <h2>Add NEW NOTES</h2> <br>
    <form action="notes" method="post" class="notes-form">
      <input type="hidden" name="id" id="id" />
      <input
        type="text"
        id="title"
        name="title"
        placeholder="here your title"
        required="required"
      />
      <input type="submit" value="Save" />
    </form>
  </section>
  <section style="margin: 2rem 0">
    <% 
      if(result.length > 0){
        for(i=0; i < result.length; i++) { 
    %>
      <div class="notes-list">
        <div class="notes-text">
          <h3><%= result[i].title %></h3>
        </div>
        <div class="notes-btn">
          <input
            type="button"
            value="Edit"
            onclick="onUpdate('<%= result[i].id %>', '<%= result[i].title %>')"
          />
          <input
            type="button"
            value="Delete"
            onclick="onDelete('<%= result[i].id %>')"
          />
        </div>
      </div>
    <% } }else{ %>
      <p>La liste des notes est completement vide !</p>
    <% } %>
  </section>
</div>

<%- include('./component/footer') %>
